{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["ES2020"],
    "strict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "@libs/*": ["libs/*"],
      "@charts/*": ["src/charts/*"],
      "@app/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
